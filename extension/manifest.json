{
  "manifest_version": 3,
  "name": "Green Points Wallet",
  "version": "1.0",
  "description": "Manage Green Points on Aptos blockchain",
  "permissions": [
  "activeTab",
  "storage",
  "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Green Points"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["aptos-client.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
